{
  "manifest_version": 3,
  "name": "AccessNow",
  "version": "1.2",
  "description": "Accessibility extension: summarize, simplify, read aloud, and apply visual accessibility themes",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AccessNow"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ]
}
